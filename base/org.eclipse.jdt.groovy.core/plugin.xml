<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="codeSelectHelper" name="Code Selection Helper (Internal)" schema="schema/codeSelectHelper.exsd"/>
	 <extension point="org.eclipse.core.contenttype.contentTypes">
	    <content-type
           base-type="org.eclipse.jdt.core.javaSource"
           file-extensions="groovy"
           id="groovySource"
           name="Groovy Source File (for Groovy projects)"
           priority="high"/>
<!--
	    <content-type
           base-type="org.eclipse.core.runtime.text"
           file-extensions="groovy"
           id="groovyText"
           name="Groovy Text File (for non-Groovy projects)"
           priority="low"/>
           -->
   </extension>
   
   <extension
         id="groovyNature"
         name="Groovy Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.codehaus.jdt.groovy.model.GroovyNature"/>
      </runtime>
      <requires-nature id="org.eclipse.jdt.core.javanature"/>
      <content-type
            id="org.eclipse.jdt.groovy.core.groovySource">
      </content-type>
   </extension>
   
</plugin>
