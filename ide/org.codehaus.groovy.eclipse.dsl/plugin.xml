<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.codehaus.groovy.eclipse.codeassist.completion.completionProposalProvider">
      <proposalProvider
            description="Provides Groovy proposals generated from .gdsl files"
            name="Groovy DSL Proposal Provider"
            proposalProvider="org.codehaus.groovy.eclipse.dsl.proposals.GDSLProposalProvider">
         <appliesTo
               projectNature="org.eclipse.jdt.groovy.core.groovyNature">
         </appliesTo>
      </proposalProvider>
   </extension>
   <extension
         point="org.eclipse.jdt.groovy.core.typeLookup">
      <lookup
            lookup="org.codehaus.groovy.eclipse.dsl.lookup.DSLTypeLookup">
         <appliesTo
               projectNature="org.eclipse.jdt.groovy.core.groovyNature">
         </appliesTo>
      </lookup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.codehaus.groovy.eclipse.dsl.command.category"
            description="Refresh GDSL files for the given project"
            id="org.codehaus.groovy.eclipse.dsl.command.refresh"
            name="Refresh GDSLs">
      </command>
      <category
            description="Commands related to GDSL management"
            id="org.codehaus.groovy.eclipse.dsl.command.category"
            name="GDSL-related commands">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.codehaus.groovy.eclipse.dsl.objectContribution"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.codehaus.groovy.eclipse.dsl.RefreshGDSLFilesActionDelegate"
               definitionId="org.codehaus.groovy.eclipse.dsl.command.refresh"
               enablesFor="+"
               id="org.codehaus.groovy.eclipse.dsl.action1"
               label="Refresh GDSL files"
               menubarPath="groovy/dsl"
               tooltip="Refresh Groovy DSLs for currentl selected Groovy Project(s)">
         </action>
          <visibility>
             <objectState
                   name="nature"
                   value="org.eclipse.jdt.groovy.core.groovyNature">
             </objectState>
          </visibility>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.codehaus.groovy.eclipse.dsl.earlystartup.InitializeAllGDSLs">
      </startup>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.jdt.groovy.core.groovySource"
            file-extensions="gdsl"
            id="org.codehaus.groovy.eclipse.dsl.gdsl"
            name="Groovy Inferencing DSL file"
            priority="high">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.codehaus.groovy.eclipse.preferences"
            class="org.codehaus.groovy.eclipse.dsl.DSLPreferencesPage"
            id="org.codehaus.groovy.eclipse.dsl.preferences"
            name="Inferencing DSL">
      </page>
   </extension>
</plugin>
